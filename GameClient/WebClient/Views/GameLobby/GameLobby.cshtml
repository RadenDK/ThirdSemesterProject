{
@model GameLobbyModel
}

@{
    Layout = "_LayoutLobby";
}

<div class="lobby-container">
    <div class="lobby-header">
        <label for="lobbyName">Lobby Name:</label>
        <input type="text" id="lobbyName" name="lobbyName" />
    </div>

    <div class="teams-container">
        <div class="team1" id="teamOne">
            <h2>TEAM ONE</h2>
            <input type="text" placeholder="InGameName1 text field box" />
            <input type="text" placeholder="Player 2" />
            <input type="text" placeholder="Player 3" />
           
        </div>

        <div class="team2" id="teamTwo">
            <h2>TEAM TWO</h2>
            <input type="text" placeholder="InGameName" />
            
        </div>
    </div>

    <div class="lobby-actions">
        <button type="button" id="inviteButton">INVITE</button>
        <button type="button" id="cancelButton">CANCEL</button>
        <button type="button" id="startButton">START</button>
    </div>

    <div class="lobby-chat">
        <h2>Lobby Chat</h2>
        <p>The actual chat with other players here</p>
        <input type="text" placeholder="Chat Text box here" />
    </div>
</div>

