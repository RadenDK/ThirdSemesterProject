{
@model GameLobbyModel
}

@{
    Layout = "_LayoutLobby";
}
<div class="chat-container">
    <div class="chat-header">
        <h2>Group Chat</h2>
    </div>
    <div class="chat-messages">
        <div class="message">
            <span class="timestamp">10:30 AM</span>
            <span class="sender">User1</span>
            <p class="text">Hello, this is a placeholder message.</p>
        </div>
        <div class="message">
            <span class="timestamp">10:31 AM</span>
            <span class="sender">User2</span>
            <p class="text">This is another placeholder message.</p>
        </div>
    </div>
    <div class="chat-input">
        <input type="text" placeholder="Type your message here..." />
        <button>Send</button>
    </div>
</div>